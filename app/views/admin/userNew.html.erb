        <div class="row">
            <h3>Thêm người dùng</h3>
        </div>
        <div class="row">
            <div class="col-md-8 col-lg-6">
                <form action="/admin/user/store"
                 method="post" enctype="multipart/form-data">
                    <div class="text-danger">
                        <%= session[:notification] %>
                        <% session[:notification] = '' %>
                    </div>
                    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                    <div class="form-group">
                        <label for="name">Username:</label>
                        <input type="text" name="username" id="" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Mật khẩu:</label>
                        <input type="password" name="password" id="" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Xác thực mật khẩu:</label>
                        <input type="password" name="repassword" id="" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Họ Tên:</label>
                        <input type="text" name="name" id="" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Email:</label>
                        <input type="email" name="email" id="" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="name">Số điện thoại:</label>
                        <input type="text" name="phone" id="" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label for="idcategory">Quyền truy cập:</label>
                        <select name="role" id="" class="form-control">
                            <option value="2" selected>Người dùng</option>
                            <option value="3">Quản lý khách sạn</option>
                        </select>
                    </div>
                    <input type="submit" value="Thêm mới" class="btn btn-primary" name="submit">
                    <label for="username" class="text-danger"></label>
                </form>
            </div>
        </div>